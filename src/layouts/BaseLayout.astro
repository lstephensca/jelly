---
import { ViewTransitions } from "astro:transitions";
import MetaBase from "@components/Meta/MetaBase.astro";
import GlobalStyles from "@components/Meta/GlobalStyles.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}
const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <MetaBase title={title} description={description} image={image} />
    <GlobalStyles />
  </head>
  <body>
    <slot />
  </body>
</html>
